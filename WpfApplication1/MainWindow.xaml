<Window x:Class="WpfApplication1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MyWindow" 
        Height="350" 
        Width="525">
    <Grid Height="321" Margin="-4,1,-3,-2" VerticalAlignment="Top" RenderTransformOrigin="0.5,0.5">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="65*"/>
            <ColumnDefinition Width="66*"/>
        </Grid.ColumnDefinitions>
        <StackPanel HorizontalAlignment="Left" Height="250" Margin="120,35,0,0" VerticalAlignment="Top" Width="315" Grid.ColumnSpan="2">
            <Rectangle Fill="#FFF4F4" HorizontalAlignment="Left" Height="65" Margin="90,0,0,0" Stroke="Black" Width="135" VerticalAlignment="Center"/>
            <Rectangle Fill="#000000" HorizontalAlignment="Center" Height="65" Width="135" Margin="0,20,0,0" GiveFeedback="new"/>
        </StackPanel>
    </Grid>
</Window>
